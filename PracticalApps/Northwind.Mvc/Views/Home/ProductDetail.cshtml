@model Packt.Shared.Product
@{
    if(Model != null)
    {
    ViewData["Title"] = "Product Detail - "+ Model.ProductName;
    }
}

<h2>Product Detail</h2>
<hr />
<div>
    <dl class="dl-horizontal">
        @if (Model!=null)
        {
        <dt>Product Id</dt>
        <dd>@Model.ProductId</dd>
        <dt>Product Name</dt>
        <dd>@Model.ProductName</dd>
        <dt>Category Id</dt>
        <dd>@Model.CategoryId</dd>
        <dt>Unit Price</dt>
        <dd>@if (Model.UnitPrice is not null)
            {
                @Model.UnitPrice.Value.ToString("C")
            }</dd>
        <dt>Units in Stock</dt>
        <dd>@Model.UnitsInStock</dd>
        }
    </dl>
</div> 