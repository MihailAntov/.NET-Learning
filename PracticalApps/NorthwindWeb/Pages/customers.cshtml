@page
@using Packt.Shared
@model NorthwindWeb.Pages.CustomersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
    <h1 class="display-2">Customers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Company Name</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Customers is not null)
            {
                @foreach (Customer c in Model.Customers)
                {
                    <tr>
                        <td>
                            <a class="btn btn-light" href="orders/?@c.CustomerId">@c.CompanyName</a></td>
                        <td>@c.Country</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<p>&nbsp;</p>
<p>
<a class="btn btn-primary" href="index">Go Back</a>
</p>